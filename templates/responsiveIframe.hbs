<div class="component-inner responsiveIframe-inner">
  {{> component this}}
  <div class="component-widget responsiveIframe-widget">
    <div class="responsiveIframe-iframe-holder">
      <iframe title="{{iframeTitle}}" scrolling="{{#if _scrolling}}{{_scrolling}}{{else}}no{{/if}}" class="responsiveIframe-iframe" src="{{_source}}"
        data-height-large="{{_height._large}}" data-height-medium="{{_height._medium}}" data-height-small="{{_height._small}}"
        data-width-large="100%" data-width-medium="100%" data-width-small="100%" allowfullscreen webkitallowfullscreen mozallowfullscreen>
      </iframe>
    </div>
  </div>
</div>
